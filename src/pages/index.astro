---
import MainLayout from "../layouts/MainLayout.astro";
---

<MainLayout title="Inicio">
  <div class="flex flex-col items-center justify-center h-screen text-center px-4">
    <h1 class="text-4xl font-bold text-gray-900">Bienvenido al Sistema de Inventario</h1>
    <p class="text-lg text-gray-600 mt-4">Administra tus productos de manera sencilla</p>
    <a href="/inventory" class="mt-6">
      <button class="px-6 py-3 bg-black text-white text-lg border-red-800 border rounded-xl hover:bg-red-800 focus:ring-2 focus:ring-blue-400">
        Ir al Inventario
      </button>
    </a>
  </div>
</MainLayout>
